<%= link_to 'New Task', new_task_path, class:"btn btn-primary btn-lg mt-3 mb-3" %>

<table class="table table-hover table-striped table-bordered table-responsive">
  <thead class="table-dark">
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Status</th>
      <th>Created at</th>
      <th>Updated at</th>
      <th>Completed at</th>
      <th>Deleted at</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody class="table-group-divider">
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.title, task %></td>
        <td><%= task.description %></td>
        <td><%= task.status ? 'ConcluÃ­da' : 'Pendente' %></td>
        <td><%= l(task.created_at) %></td>
        <td><%= l(task.updated_at) %></td>
        <td><%= task.completed_at ? l(task.completed_at) : '' %></td>
        <td><%= task.deleted_at ? l(task.deleted_at) : '' %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: t('messages.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
